@model ProductsStore.Areas.Admin.Data.EditProductEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div id="productEditContainer">
    <div class="card-deck login-card">
        <div class="card m-3">
            <div class="card-header">
                Update Product
            </div>
            <div class="card-body">
                <form id="productEditForm">
                    <div class="form-group">
                        @Html.LabelFor(model => model.ID)
                        <br />
                        @Html.DisplayFor(model => model.ID)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description)
                        @Html.TextBoxFor(model => model.Description, new { @class = "form-control", placeholder = "Description" })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Value)
                        @Html.TextBoxFor(model => model.Value, new { @class = "form-control", placeholder = "Value", type = "Value" })
                        @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.IsActive)
                        @Html.DropDownListFor(model => model.IsActive, (IEnumerable<SelectListItem>)ViewBag.OptionsValue, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.TypeId)
                        @Html.DropDownListFor(model => model.TypeId, (IEnumerable<SelectListItem>)ViewBag.OptionsTypeProduct, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TypeId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.TypeId)
                        @Html.DropDownListFor(model => model.TypeId, (IEnumerable<SelectListItem>)ViewBag.OptionsTypeProduct, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TypeId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CreatedDate)
                        <br />
                        @Html.DisplayFor(model => model.CreatedDate)
                    </div>
                    <div class="col text-center">
                        <button type="submit" class="btn btn-primary" style="align-self: center" data-action-product="updateProduct">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
