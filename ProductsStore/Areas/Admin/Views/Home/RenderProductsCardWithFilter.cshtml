@model List<ProductsStore.Areas.Admin.Data.ProductsHomeViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="py-5">
    <div class="container">
        <div class="row hidden-md-up">
            @foreach (var item in Model)
            {
                <div class="col-md-4" style="padding-bottom: 10px">
                    <div class="card-block">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@item.TypeProduct</h5>
                                <p class="card-text">@item.Description</p>
                                <a asp-area="Admin" asp-controller="Home" asp-action="UpdateProduct" asp-route-id="@item.Id" class="card-link">View more</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>