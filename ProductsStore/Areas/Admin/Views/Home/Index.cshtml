@model List<ProductsStore.Areas.Admin.Data.ProductsHomeViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="homeAdminContainer">
    <div class="py-5">
        <div class="container">
            <div class="row hidden-md-up">
                <div class="col-md-7">
                    <form id="filterHome">
                        <div class="main">
                            <div class="input-group">
                                <input type="text" class="form-control" id="description" name="description" placeholder="Search by description">
                                <div class="input-group-append" style="margin-right: 10%">
                                    <button class="btn btn-secondary" type="button" data-action-product="searchByDescription">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                                <input type="text" class="form-control" id="id" name="id" placeholder="Search by id">
                                <div class="input-group-append">
                                    <button class="btn btn-secondary" type="button" data-action-product="searchById">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="py-5">
        <div class="container">
            <div class="row hidden-md-up">
                @foreach (var item in Model)
                {
                    <div class="col-md-4" style="padding-bottom: 10px">
                        <div class="card-block">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">@item.TypeProduct</h5>
                                    <p class="card-text">@item.Description</p>
                                    <a asp-area="Admin" asp-controller="Home" asp-action="UpdateProduct" asp-route-id="@item.Id" class="card-link">View more</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>